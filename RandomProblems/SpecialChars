class Solution {
    public int numberOfSpecialChars(String word) {
        HashMap<Character, Integer> hmap = new HashMap<>();
        int count = 0;
        for(int i=0; i<word.length(); i++) {
            if(hmap.get(Character.toLowerCase(word.charAt(i))) == null) {
                hmap.put(Character.toLowerCase(word.charAt(i)), 0);
            } else if(hmap.get(Character.toLowerCase(word.charAt(i))) == 0) {
                hmap.put(Character.toLowerCase(word.charAt(i)), -1);
                count += 1;
            }
        }
        return count;
        
    }
}
